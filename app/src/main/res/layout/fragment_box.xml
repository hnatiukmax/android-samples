<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hnatiuk.features.navigation.fragments.BoxFragment"
    tools:background="#C4D8B0">

    <TextView
        android:id="@+id/thisIsBoxLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is box"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Go Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thisIsBoxLabel" />

    <Button
        android:id="@+id/openSecret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Secret"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goBack" />

    <Button
        android:id="@+id/generateNumberAndBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Number and back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/openSecret" />

</androidx.constraintlayout.widget.ConstraintLayout>