<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hnatiuk.features">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name="com.hnatiuk.entry.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScreenCapturing">
        <activity
            android:name=".navigation.NavigationSampleActivity"
            android:exported="false" />
        <activity
            android:name=".room.RoomSampleActivity"
            android:exported="false" />
        <activity
            android:name=".overlay.OverlayActivity"
            android:exported="false" />
        <activity
            android:name="com.hnatiuk.entry.EntryActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hnatiuk.features.screencapture.ScreenCaptureActivity"
            android:exported="true" />

        <service
            android:name="com.hnatiuk.features.screencapture.lib.internal.ScreenCaptureService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaProjection" />
    </application>

</manifest>